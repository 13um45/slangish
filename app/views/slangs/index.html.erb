<div class="container">
  <% @slangs.each do |slang| %>
    <div class="row">
      <div class="col-md-8 col-md-offset-2 jumbotron"><h3><%= link_to slang.word, slang_path(slang) %></h3><br>
      <%= slang.definition %><br>
      <%= link_to 'Destroy', slang_path(slang),
              method: :delete,
              data: { confirm: 'Are you sure?' } %>
      </div>
      </div>
  <% end %>
<div class="row">
<div class="col-md-4 col-md-offset-2">
<%= link_to 'New Slang Term', new_slang_path, class: "btn btn-lg btn-default" %>
</div>
</div>
<br>
</div>