<%= form_for([@slang, @slang.comments.build]) do |f| %>
  <p>
    <%= f.label :commenter %><br>
    <%= f.text_field :commenter, class: "form-control" %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body, class: "form-control", rows: 4 %>
  </p>
  <p>
    <%= f.submit class: "btn btn-default" %>
  </p>
<% end %>