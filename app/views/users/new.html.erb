<div class="container">
<h1 class="text-center">Sign Up!</h1>

<%= form_for :user, url: '/users' do |f| %>
 <div class="row">
 <div class="col-md-4 col-md-offset-4 col-sm-5 col-sm-offset-4">
  Name: <%= f.text_field :name, class: "form-control" %>
  Email: <%= f.text_field :email, class: "form-control" %>
  Password: <%= f.password_field :password, class: "form-control" %>
  Confirm Password: <%= f.password_field :password_confirmation, class: "form-control" %>
  <br>
  <%= f.submit "Submit", class: "btn btn-block btn-default" %>
<% end %>
</div>
</div>
  </div>